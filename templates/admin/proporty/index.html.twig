{% extends 'base.html.twig' %}
{% block title 'Gerer les hotels' %}
{% block body %}

    <div class="container mt-4">
    <h1> Gérer les hôtels</h1>
    <table class="table table-striped">
        <thead>
        <tr>
        <th>Titre</th>
        <th>Actions</th>
        </tr>
        </thead>
            <tbody>
             {% for proporty in proporties %}
            <tr>
                <td>{{ proporty.title }}</td>
                <td><a href="{{ path('admin.proporty.edit' , {id: proporty.id}) }}" class="btn btn_secondary">Editer</a></td>
            </tr>
            
        {% endfor %}
            </tbody>
    </table>
    <div class="text-right">
    <a href="{{ path('admin.proporty.new') }}" class="btn btn-primary">Créer un nouveau hôtel</a> 
    </div>
    </div>
       
   
{% endblock %}
